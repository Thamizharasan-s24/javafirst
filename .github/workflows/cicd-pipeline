name: Java CI/CD Pipeline

# Trigger the workflow on push or pull request events to the 'master' branch
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  # Job 1: Build and Test Java Application
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up JDK 11
        uses: actions/setup-java@v2
        with:
          java-version: '11'

      - name: Build Java application
        run: |
          javac HelloWorld.java

      - name: Run tests (optional)
        run: |
          # You can run your unit tests here if you have any
          echo "No tests in this example."

  # Job 2: Build Docker Image (no push)
  docker:
    runs-on: ubuntu-latest
    needs: build  # This means the Docker job will run only after the 'build' job finishes

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Build Docker image
        run: |
          docker build -t my-java-app .

      - name: Test Docker image (optional)
        run: |
          docker run my-java-app

